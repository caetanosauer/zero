SUFFIXES =    .pure
.$(OBJEXT).pure:  
	$(PURIFY_BIN)/purify $(PURIFY_FLAGS)  $(PURIFY_COLLECTOR) $(CXX) -o $@ $< $(LDADD) $(LIBS)

LOCALCLEAN += $(check_PROGRAMS:%=%.pure)
PURE_CXXFLAGS += -DPURIFY -DPURIFY_ZERO -I$(PURIFY_INCLUDE) 

endif

